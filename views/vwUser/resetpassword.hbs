{{#section 'title'}}Reset Password{{/section}}

<section class="sign-in-page">
    <div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6 col-sm-12 col-12 ">
            <div class="sign-user_card ">
                <div class="d-flex justify-content-center">
                {{!-- <div class="sign-user_logo">
                    <img src="/images/login/user.png" class=" img-fluid" alt="Logo">
                </div> --}}
                </div>
                <div class="sign-in-page-data">
                <div class="sign-in-from w-100 m-auto pt-5">
                    <h4 class="mt-3 text-white mb-0 text-center">Reset Password</h4>
                    <p class="text-white text-center">Fill 2 fields to change password</p>
                    <form method="post" id="reset" class="mt-4">

                        {{#if error}}
                        <div class="alert text-white bg-primary" role="alert">
                            <div class="iq-alert-text">{{error}}</div>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <i class="ri-close-line"></i>
                            </button>
                        </div>
                        {{/if}}

                        <div class="form-group">
                            <label for="exampleInputEmail1">New Password</label>
                            <input name="p1" type="Password" class="form-control mb-0" id="exampleInputEmail1"  placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Confirm New Password</label>
                            <input name="p2" type="Password" class="form-control mb-0" id="exampleInputEmail1"  placeholder="Password">
                        </div>
                        <div class="d-inline-block w-100">
                            <button form="reset" class="btn btn-primary float-right">Change password</button>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>