{{#section 'title'}}
{{#if isAlbum}}{{categoryData.Name}} Album{{else}}Search everything{{/if}}
{{/section}}

<div class="col-lg-12">
    <div class="iq-card">
        <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
                <h4 class="card-title">
                    {{#if isAlbum}}
                        {{categoryData.Name}} Album
                    {{else}}
                        Search results for "{{searchString}}"
                    {{/if}}
                    : {{numOfSong}} songs
                </h4>
                <p>{{#if isAlbum}}{{categoryData.description}}{{/if}}</p>
            </div>
            <div class="d-flex align-items-center iq-view">
            </div>
        </div>
        <div class="iq-card-body">
            {{#if songList}}
            <ul class="list-unstyled row iq-box-hover mb-0">
                {{#each songList}}
                <li class="col-xl-2 col-lg-3 col-md-4 iq-music-box">
                    <div class="iq-card">
                        <div class="iq-card-body p-0">
                            <div class="iq-thumb">
                                <div class="iq-music-overlay"></div>
                                <a href="/music/{{ID}}">
                                    <img src="/images/song/upload-{{ID}}.png"
                                        class="img-border-radius img-fluid w-100" alt="">
                                </a>
                                <div class="overlay-music-icon">
                                    <a href="/music/{{ID}}">
                                        <i class="las la-play-circle"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="feature-list text-center">
                                <h6 class="font-weight-600 mb-0">{{Name}}</h6>
                                <p class="mb-0">{{composer}}</p>
                            </div>
                        </div>
                    </div>
                </li>    
                {{/each}}
            </ul>
            {{else}}

            {{#if isAlbum}}
            This album does not have any songs.
            {{else}}                 
            Sorry we didn't find any results for "{{searchString}}".
            {{/if}}

            {{/if}}
        </div>
    </div>
</div>
{{#if songList}}
<div class="col-lg-12">
    <nav aria-label="Page navigation example" class="pagination justify-content-center">
        <ul class="pagination mb-0">
            <li class="page-item {{#unless Pagination.can_Prev}}disabled{{/unless}}">
                <a class="page-link" href="?page={{Pagination.pre_Value}}">Previous</a>
            </li>
            {{#each Pagination.page_Items}}
                {{#if isActive}}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">
                        {{value}}
                    </span>
                </li>
                {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                </li>
                {{/if}}
            {{/each}}
            <li class="page-item {{#unless Pagination.can_Next}}disabled{{/unless}}">
                <a class="page-link" href="?page={{Pagination.next_Value}}">Next</a>
            </li>
        </ul>
    </nav>
</div>
{{/if}}